</head>
<body>
	<script type="text/javascript">
	// All lab code should be between these two comments
  console.log("XI JIA – xjia11@hawk.iit.edu – Lab 2");
  var userName = window.prompt("What is your Name?","");//input your name
  var msg;
  //process the alert msg.
	if(userName.length>0){
		msg = "Hello ".concat(userName,"!");
	}else{
		msg = "Hello World! You did not enter a name!"
	}
	//alert and log the msg.
	window.alert(msg);
	console.log(msg);
	//Determine whether each character is a letter
	if(userName.length>0){
		var num = 0;
		for (let i = 0; i < userName.length; i++) {
			num = checkLetter(userName.charAt(i))+num;
		}
		console.log("Your name has ".concat(num," characters."));
	}
	//checkLetter Function,if cr is letter or space return 1,otherwise return 0.
	function checkLetter(cr) {
		var Regx = /^[A-Za-z ]*$/;
		if (Regx.test(cr)) {
			return 1;
		}
		else {
			return 0;
		}
		// All lab code should be between these two comments
		</script>
